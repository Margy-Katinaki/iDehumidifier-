<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="@id/text_view_title_speed"
        app:layout_constraintBottom_toBottomOf="@id/text_view_title_speed"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:focusable="true"/>


    <TextView
        android:id="@+id/text_view_title_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Speed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        />


    <TextView
        android:id="@+id/text_view_normal"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/switch_normal"
        app:layout_constraintTop_toBottomOf="@id/text_view_title_speed"
        android:layout_marginTop="240dp"
        android:text="Normal"
        android:textSize="18sp"/>


    <Switch
        android:id="@+id/switch_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_view_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_view_normal"
        app:layout_constraintBottom_toBottomOf="@id/text_view_normal"
        tools:ignore="UseSwitchCompatOrMaterialXml" />



    <TextView
        android:id="@+id/text_view_fast"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/switch_fast"
        app:layout_constraintTop_toBottomOf="@+id/text_view_normal"
        android:layout_marginTop="48dp"
        android:text="Fast"
        android:textSize="18sp"/>


    <Switch
        android:id="@+id/switch_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_view_fast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_view_fast"
        app:layout_constraintBottom_toBottomOf="@id/text_view_fast"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <TextView
        android:id="@+id/text_view_auto"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_fast"
        app:layout_constraintEnd_toStartOf="@id/switch_auto"
        android:layout_marginTop="48dp"
        android:text="Auto"
        android:textSize="18sp"/>


    <Switch
        android:id="@+id/switch_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_view_auto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_view_auto"
        app:layout_constraintBottom_toBottomOf="@id/text_view_auto"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</androidx.constraintlayout.widget.ConstraintLayout>